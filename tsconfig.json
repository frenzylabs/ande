{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "rootDir": "src",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [
    "es6", 
    "es2017", 
    "es2019", 
    "dom"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
